@inherits ODK.Umbraco.Web.Mvc.OdkUmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<div class="container">
    @*Nav*@
    <nav class="navbar--admin">
        <div class="nav nav-tabs mt-2" role="tablist" aria-orientation="vertical">
            <a class="nav-item nav-link active" data-toggle="tab" href="#events" role="tab" aria-controls="events" aria-selected="true">
                Events
            </a>
            <a class="nav-item nav-link" data-toggle="tab" href="#members" role="tab" aria-controls="members">
                Members
            </a>
            <a class="nav-item nav-link" data-toggle="tab" href="#member-groups" role="tab" aria-controls="member-groups">
                Member Groups
            </a>
            <a class="nav-item nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Other</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" data-toggle="tab" href="#import-pictures" role="tab" aria-controls="import-pictures">
                    Import pictures
                </a>
                <a class="dropdown-item" data-toggle="tab" href="#test-email" role="tab" aria-controls="test-email">
                    Test email
                </a>
                <a class="dropdown-item" role="tab" href="/wiki" target="_blank">
                    Wiki
                </a>
            </div>
        </div>
    </nav>
    <section class="section--main">
        @*Content*@
        <div class="tab-content">
            @* Events *@
            <div class="tab-pane fade show active" id="events" role="tabpanel">
                @Html.Partial("Admin/_Events")
            </div>

            @* Members *@
            <div class="tab-pane fade" id="members" role="tabpanel">
                @Html.Partial("Admin/_Members")
            </div>

            @* Member Groups *@
            <div class="tab-pane fade" id="member-groups" role="tabpanel">
                @Html.Partial("Admin/_MemberGroups")
            </div>

            @* Import member pictures *@
            <div class="tab-pane fade" id="import-pictures" role="tabpanel">
                @Html.Partial("Admin/_ImportMemberPictures")
            </div>

            @* Send test email *@
            <div class="tab-pane fade" id="test-email" role="tabpanel">
                @Html.Partial("Admin/_TestEmail")
            </div>
        </div>
    </section>
</div>

@section  Head
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/css/admin")
}

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
    @Scripts.Render("~/bundles/js/admin")
}