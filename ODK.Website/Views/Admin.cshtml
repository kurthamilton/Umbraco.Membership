@inherits ODK.Umbraco.Web.Mvc.OdkUmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<section class="section section--main">
    <div class="container">
        <div class="row">
            @*Nav*@
            <div class="col-3">
                <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" data-toggle="pill" href="#events" role="tab" aria-controls="events" aria-selected="true">
                        Events
                    </a>
                    <a class="nav-link" data-toggle="pill" href="#members" role="tab" aria-controls="members" aria-selected="true">
                        Members
                    </a>
                    <a class="nav-link" data-toggle="pill" href="#member-groups" role="tab" aria-controls="member-groups" aria-selected="true">
                        Member Groups
                    </a>
                    <a class="nav-link" data-toggle="pill" href="#import-pictures" role="tab" aria-controls="import-pictures" aria-selected="true">
                        Import pictures
                    </a>
                    <a class="nav-link" data-toggle="pill" href="#test-email" role="tab" aria-controls="test-email" aria-selected="false">
                        Test email
                    </a>
                    <a class="nav-link" role="tab" href="/wiki" target="_blank">
                        Wiki
                    </a>
                </div>
            </div>

            @*Content*@
            <div class="col-9">
                <div class="tab-content">
                    @* Events *@
                    <div class="tab-pane fade show active" id="events" role="tabpanel">
                        @Html.Partial("Admin/_Events")
                    </div>

                    @* Members *@
                    <div class="tab-pane fade" id="members" role="tabpanel">
                        @Html.Partial("Admin/_Members")
                    </div>

                    @* Member Groups *@
                    <div class="tab-pane fade" id="member-groups" role="tabpanel">
                        @Html.Partial("Admin/_MemberGroups")
                    </div>

                    @* Import member pictures *@
                    <div class="tab-pane fade" id="import-pictures" role="tabpanel">
                        @Html.Partial("Admin/_ImportMemberPictures")
                    </div>

                    @* Send test email *@
                    <div class="tab-pane fade" id="test-email" role="tabpanel">
                        <h2>Send test email</h2>
                        @using (Html.BeginUmbracoForm("SendTestEmail", "Admin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label class="form-control-label">To</label>
                                <input class="form-control" type="text" name="to" />
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Subject</label>
                                <input class="form-control" type="text" name="subject" />
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Body</label>
                                <textarea class="form-control js-html-editor" name="body">
                                </textarea>
                            </div>

                            <div>
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section  Head
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/css/admin")
}

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
    @Scripts.Render("~/bundles/js/admin")
}