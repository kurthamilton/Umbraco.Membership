@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
    var backgroundImage = Model.Content.HeroBackgroundImage != null ? Model.Content.HeroBackgroundImage.Url : string.Empty;
}

<section class="section section--hero background-image-full overlay overlay--dark section--content-center"
         style="background-image: url('@backgroundImage')">
    <div class="section--hero__content">
        @Html.GetGridHtml(Model.Content, "heroContent", "bootstrap3-fluid")
    </div>
</section>

<section class="section">
    @Html.GetGridHtml(Model.Content, "bodyText", "bootstrap3-fluid")
</section>

<section class="section">

    <div class="container">
        <div class="row">

            <div class="text-center">
                <h2>@Model.Content.FooterHeader</h2>
                <p class="section__description">@Model.Content.FooterDescription</p>

                @*<a class="btn btn-secondary" href="@Model.Content.FooterCtalink.Url">
                    @Model.Content.FooterCtacaption
                </a>*@

            </div>

        </div>
    </div>

</section>