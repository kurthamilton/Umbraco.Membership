@inherits ODK.Umbraco.Web.Mvc.OdkUmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

@foreach (var section in Model.Content.Children().Where(x => x.TemplateId == 0))
{
    string backgroundImage = section.GetPropertyValue<IPublishedContent>("heroBackgroundImage").Url;
    <section class="section section--hero background-image-full overlay overlay--dark section--content-center"
             style="background-image: url('@backgroundImage')">
        <div class="section--hero__content">
            @Html.GetGridHtml(section, "heroContent", "bootstrap3-fluid")
        </div>
    </section>
}

<section class="section">

    <div class="container">
        <div class="row">

            <div class="text-center">
                <h2>@Model.Content.GetPropertyValue("FooterHeader")</h2>
                <p class="section__description">@Model.Content.GetPropertyValue("FooterDescription")</p>

                @*<a class="btn btn-secondary" href="@Model.Content.FooterCtalink.Url">
                    @Model.Content.FooterCtacaption
                </a>*@

            </div>

        </div>
    </div>

</section>