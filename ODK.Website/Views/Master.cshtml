@using ODK.Umbraco.Membership;
@using ODK.Umbraco.Settings;
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;

    IPublishedContent member = Umbraco.MembershipHelper.GetCurrentMember();
    if (Model.Content.IsRestricted(member))
    {
        Response.Redirect(Model.Content.Parent.Url);
    }

    HomePageSettings homePageSettings = Model.Content.HomePageSettings();
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@GetTitle(homePageSettings)</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    @RenderSection("Header", required: false)
</head>
<body>
    <header>
        @Html.Partial("Navigation/TopNavigation")
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        @Html.Partial("Footer")
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

@functions
{
    string GetTitle(HomePageSettings homePageSettings)
    {
        return Model.Content.Id == homePageSettings.Content.Id
            ? homePageSettings.Name
            : string.Format("{0} | {1}", Model.Content.Name, homePageSettings.Name);
    }
}