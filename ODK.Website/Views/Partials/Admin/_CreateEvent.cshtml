@using ODK.Website.Models;
@using ODK.Umbraco.Web.Mvc;
@inherits ODK.Umbraco.Web.Mvc.OdkUmbracoTemplatePage
@{
    HtmlHelper<CreateEventViewModel> eventHelper = Html.For(new CreateEventViewModel());
}

@using (Html.BeginUmbracoForm("CreateEvent", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <div class="form-group row required">
        <div class="col-3 col-md-2 text-right">
            @eventHelper.LabelFor(x => x.Name, new { @class = "col-form-label" })
        </div>
        <div class="col-9 col-md-10">
            @eventHelper.TextBoxFor(x => x.Name, new { @class = "form-control", required = "" })
        </div>
    </div>

    <div class="form-group row required">
        <div class="col-3 col-md-2 text-right">
            @eventHelper.LabelFor(x => x.Location, new { @class = "col-form-label" })
            @Html.Partial("Tooltip", "The main description for where the event is happening")
        </div>
        <div class="col-9 col-md-10">
            @eventHelper.TextBoxFor(x => x.Location, new { @class = "form-control", required = "" })
        </div>
    </div>

    <div class="form-group row required">
        <div class="col-3 col-md-2 text-right">
            @eventHelper.LabelFor(x => x.Date, new { @class = "col-form-label" })
        </div>
        <div class="col-9 col-md-10">
            @eventHelper.TextBoxFor(x => x.Date, new { @class = "form-control", type = "Date", required = "" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-3 col-md-2 text-right">
            @eventHelper.LabelFor(x => x.Time, new { @class = "col-form-label" })
        </div>
        <div class="col-9 col-md-10">
            @eventHelper.TextBoxFor(x => x.Time, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-3 col-md-2 text-right">
            @eventHelper.LabelFor(x => x.Address, new { @class = "col-form-label" })
            @Html.Partial("Tooltip", "Additional location information, if required")
        </div>
        <div class="col-9 col-md-10">
            @eventHelper.TextBoxFor(x => x.Address, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-3 col-md-2 text-right">
            @eventHelper.LabelFor(x => x.MapQuery, new { @class = "col-form-label" })
            @Html.Partial("Tooltip", "The search term used if displaying a map. Be as specific as possible.")
        </div>
        <div class="col-9 col-md-10">
            @eventHelper.TextBoxFor(x => x.MapQuery, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-3 col-md-2 text-right">
            @eventHelper.LabelFor(x => x.Description, new { @class = "col-form-label" })
        </div>
        <div class="col-9 col-md-10">
            @eventHelper.TextAreaFor(x => x.Description, new { @class = "form-control js-html-editor", type = "Date" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-9 col-md-10 offset-3 offset-md-2">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
}